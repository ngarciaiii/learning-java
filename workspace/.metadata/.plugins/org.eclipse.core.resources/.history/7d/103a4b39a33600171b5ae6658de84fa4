	public static void main(String[] args){
		Scanner reader = new Scanner(System.in);
		
		int max = 100;
		int min = 1;
		int theAns =(int )(Math.random() * 100 + 1); 
		System.out.println(theAns);
		System.out.println();
		
		int guesses = 4;
		System.out.print("Guess a number (5 guesses): ");
		
		while (guesses > 0) {
			int guess = Integer.parseInt(reader.nextLine());
			guesses--;
			
			if (guess != theAns){ 
				if (guess > theAns) {
					System.out.println("The guessing number is greater.");
					System.out.println("Try again! " + guesses + "left: ");
				} else {
					System.out.println("The guessing number is lesser.");
					System.out.println("Try again! " + guesses + " guesses left: ");
				}
			} else if (guess == theAns) {
					System.out.println();
					System.out.println("You have guessed it! The drawn number is: " + theAns);
					break;
			} else if (guesses == 0) {
				System.out.println();
				System.out.println("Sorry, your guesses have ran out!");
			}
		}
	}
}