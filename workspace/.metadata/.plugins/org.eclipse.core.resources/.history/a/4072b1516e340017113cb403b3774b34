package week2;

import java.util.Scanner;

public class week2_ex39_42{
	
	private static void printStars(int amount) {
		int i = 0;
		while(i < amount) {
			System.out.print("*");                          
			i++;
		} System.out.println();
	}
	
	public static void printSquare(int sideSize){
		int per = 0;
		while (per < sideSize) {
			printStars(sideSize);
			per++;
		}
	}
	
	public static void main(String[] args) {
		printStars(5);
		printStars(3);
		printStars(9);
		System.out.println();
		printSquare(4);
	}
}