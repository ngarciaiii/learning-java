package week2;

import java.util.Scanner;

public class week2_ex41{
	
	// Generates a random number
	public static int drawNumber() {
		int max = 100;
		int min = 1;
		int num =(int )(Math.random() * 100 + 1); 
		System.out.println(num);
		return num;
	}

	public static int guessTheNum () {
		Scanner reader = new Scanner(System.in);
		System.out.print("Guess a number: ");
		int guess = Integer.parseInt(reader.nextLine());
		return guess;
	}
	
	public static void checkGuess(int guess, int num) {
		if (guess > num) {
			System.out.println("The guessing number is greater.");
		} else {
			System.out.println("The guessing number is lesser.");
		}
	}
	
	public static void main(String[] args){
		int num = drawNumber();
		int guesses = 5;
		while(guesses > 0) {
			int guess = guessTheNum();
			checkGuess(guess, num);
			System.out.println();
			guesses--;
			System.out.println("You have " + guesses + " guesses left");
		}
	}
	
