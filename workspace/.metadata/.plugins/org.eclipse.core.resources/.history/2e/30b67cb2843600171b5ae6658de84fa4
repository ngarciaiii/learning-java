	public static void main(String[] args){
		Scanner reader = new Scanner(System.in);
		
		int max = 100;
		int min = 1;
		int theAns =(int )(Math.random() * 100 + 1); 
		System.out.println(theAns);
		
		int guesses = 4;
		System.out.print("Guess a number: ");
		int guess = Integer.parseInt(reader.nextLine());
		
		while (guess != theAns && guesses > 0) {
			System.out.print(guesses + " guesses left, try again: ");
			guess = Integer.parseInt(reader.nextLine());
			guesses--;
		} System.out.println("You have guessed it! The drawn number is: " + theAns);
	}
}